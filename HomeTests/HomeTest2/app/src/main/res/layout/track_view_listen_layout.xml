<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_marginTop="20dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.android.volley.toolbox.NetworkImageView
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:id="@+id/waveform_image"
        android:scaleType="fitXY"
        android:src="@color/background_material_dark"
        android:layout_width="@dimen/waveform_png_width"
        android:layout_height="@dimen/waveform_png_height"/>

    <android.widget.MediaController
        android:layout_below="@id/waveform_image"
        android:id="@+id/media_controlls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

</RelativeLayout>